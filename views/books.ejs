<!-- views/books.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Список книг</title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- Подключаем стили -->
</head>
<body>
  <div class="container">
    <h1 class="text-center">Список доступных книг</h1>
    
    <!-- Таблица книг -->
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Название</th>
          <th>Автор</th>
          <th>Жанр</th>
          <th>Год публикации</th>
          <th>Статус</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(book) { %>
          <tr>
            <td><%= book.book_id %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.genre %></td>
            <td><%= book.published_year %></td>
            <td><%= book.availability_status %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <br />
    <a href="/" class="btn">Выйти</a>
  </div>
</body>
</html>
